<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Demoblaze Test Suite" parallel="false" thread-count="1">
    
    <listeners>
        <listener class-name="com.demoblaze.automation.listeners.TestListener"/>
    </listeners>
    
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.demoblaze.automation.tests.LoginTests"/>
            <class name="com.demoblaze.automation.tests.SignUpTests"/>
            <class name="com.demoblaze.automation.tests.ProductSearchTests"/>
            <class name="com.demoblaze.automation.tests.CartTests"/>
            <class name="com.demoblaze.automation.tests.CheckoutTests"/>
        </classes>
    </test>
    
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.demoblaze.automation.tests.LoginTests"/>
            <class name="com.demoblaze.automation.tests.SignUpTests"/>
        </classes>
    </test>
    
</suite>

